{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="lib/bootstrap-3.3.2-dist/css/bootstrap.min.css">

	{% stylesheets 'bundles/app/css/*' filter='cssrewrite' %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block javascripts %}
	<script src="lib/jquery-1.11.2/jquery-1.11.2.min.js"></script>

	{% javascripts 'bundles/app/js/*' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body %}

<div class="navbar navbar-custom">
	<div class="container">
		<div class="navbar-header">
			<a class="navbar-brand" href="/"><span>Tweet Scanner</span></a>
		</div>
		<nav class="collapse navbar-collapse bs-navbar-collapse">
			<ul class="nav navbar-nav">
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li>
					<a target="_blank" href="https://github.com/mattcancode/tweet-scanner-symfony">
						<span class="glyphicon glyphicon-new-window"></span>
						<span>Source Code <small>(symfony)</small></span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</div>

<div class="content">
	<div class="row">

		<div class="container">

			<div class="col-md-4">
				<div class="stream">
					<ol id="tweeters" class="stream-items">
						<li class="stream-item stream-header text-center">
							<h3>Top Tweeters</h3>
						</li>
						<li class="stream-item stream-footer">
						</li>
					</ol>
				</div>
			</div>

			<div class="col-md-offset-1 col-md-7">
				<div class="stream">
					<ol id="tweets" class="stream-items">
						<li class="stream-item stream-header text-center">
							<h3>Recent Tweets</h3>
						</li>
						<li class="stream-item stream-item-count text-center">
							No results
						</li>
						<li class="stream-item stream-footer">
						</li>
					</ol>
				</div>
			</div>

		</div>
	</div>
</div>

{% endblock %}

